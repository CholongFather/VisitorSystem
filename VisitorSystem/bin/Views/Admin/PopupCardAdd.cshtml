    function CallMethod() {
        try {
            MSCOMM.CardConnected();
            //OXC 변경
            alert("연결 시도 중...");
        }
        catch (e) {
            alert("연결에러" + e);

        }
    }

    function CallMethodDisconnect() {
        if (CardConnected == 1) {
            CardConnected = 0;
        }
    }

    if ("@ViewBag.Process" == "E") {
        opener.location.reload();
        window.close();
    }
</script>



