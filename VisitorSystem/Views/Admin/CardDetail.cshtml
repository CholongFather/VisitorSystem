@model VisitorSystem.Models.Card

<script>
    function CardDelete(CardID) {
        if (confirm("등록된 카드 정보를 지우시겠습니까?"))
            location.href = '@Url.Action("CardDelete","Admin")?CardID=' + CardID;
        else
            return false;
    }
</script>

<form action="/Admin/CardDetail" method="post">
    <div id="contents">
        <div class="sub_container">
            <div class="row">
                <div class="col md-1">
                    <div class="sub_heading border_b">
                        <h2>카드 관리</h2>
                    </div>
                    <div class="row">
                        <div class="md-1">
                            <table class="view" width="100%" summary="view">
                                <colgroup>
                                <col width="35%" />
                                <col width="35%" />
                                </colgroup>
                                <tbody>
                                    <tr>
                                        <th>카드 아이디</th>
                                        <td>@Html.TextBoxFor(m => m.CardID)</td>
                                    </tr>
                                    <tr>
                                        <th>카드 번호</th>
                                        <td>@Html.TextBoxFor(m => m.CardNo)</td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td style="color:red">@ViewBag.Error</td>
                                    </tr>
                                    <tr>
                                        <th>카드 상태 (I : 발급, R : 회수 , S : 미회수, ? : 미발급)</th>
                                        <td>@Html.TextBoxFor(m => m.CardFlag)</td>
                                    </tr>
                                    @if (Model != null)
                                    {
                                        <tr>
                                            <th>등록일</th>
                                            <td>@Html.TextBoxFor(m => m.InsertDate)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="btn_area view">

                                @if (Model != null)
                                {
                                    <button class="btn-save" type="submit">수정</button>
                                    <button class="btn-delete" onclick="javascipt:CardDelete('@Model.CardID')">삭제</button>

                                }
                                else
                                {
                                    <button class="btn-save" type="submit">등록</button>
                                }
                                <button class="btn-list" type="button" onclick="location.href='@Url.Action("CardList", "Admin")'">목록</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>