@inherits System.Web.Mvc.ViewStartPage
@{
    <!--김남훈 최초생성 해당 뷰 Start를 상속해야만 제대로 동작한다. 위의 상속명 없을 경우 ViewStart를 찾지 못하여 고생한다.-->
    <!--각 Layout이 웹페이지마다 다르기 때문에 해당 Start에서 나눠야한다.-->
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString().ToLower();
    var action = HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString().ToLower();

    <!--컨트롤러 이름과 Action 명을 보고 Layout을 나누는 부분.-->
    string cLayout = "~/Views/Shared/_Layout.cshtml";
    if (controller == "tablet")
    {
        cLayout = "~/Views/Shared/tablet_Layout.cshtml";
    }
    else if (action == "login")
    {
        cLayout = "~/Views/Shared/admin_Login_Layout.cshtml";

    }
    else if (controller == "admin" && !action.Contains("popup"))
    {
        cLayout = "~/Views/Shared/admin_Layout.cshtml";
    }
    else if (action == "error")
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }

    else
    {
        cLayout = "~/Views/Shared/admin_PopLayout.cshtml";
    }

    Layout = cLayout;
}